---
//Importacion de CSS
import '../styles/global.css';
//Impoertaciones de componentes
import Header from "../components/Header.astro";
import CartDrawer from "../components/CartDrawer.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title?: string;
}

const { title = "Mi Tienda" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} — Mi Tienda</title>
    <link href="https://fonts.googleapis.com/css2?family=Syne:wght@400;600;700;800&family=DM+Sans:wght@400;500&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-neutral-200">
    <!-- ── Header ── -->
     
    <Header />
    <!-- ── Contenido ── -->
    <main>
      <slot />
    </main>

    <!-- ── Drawer lateral del carrito ── -->
    <CartDrawer />

    <!-- Overlay oscuro -->
    <div id="cart-overlay"></div>

    <!--Footer-->
    <Footer/>

    <!-- ── Script del carrito (se ejecuta en el cliente) ── -->
    <script>
      import { initCart } from "../JS/cart.js";
      initCart();
    </script>
  </body>
</html>

<style is:global>
  *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

  .nav-bar{
    margin: 0 auto;
  }

  .logo{
    padding: 5px;
  }
</style>
