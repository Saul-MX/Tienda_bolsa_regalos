---
//immpoertqcion de iconos
import WhatsAppIcon from "../assets/WhatsApp.astro";
import CarritoComprasIcon from "../assets/CarritoCompras.astro";
// src/components/CartDrawer.astro
// Panel deslizante con la lista de items, totales y acciones.
---
<div id="overlay" class="fixed inset-0 z-40 bg-black/40 backdrop-blur-sm md:hidden"></div>

<aside id="cart-drawer" aria-label="Carrito de compras">
  <!-- Encabezado -->
  <div class="drawer-header border-b border-amber-400/30">
    <div class="flex">
      <CarritoComprasIcon class="w-6 h-6 text-amber-400"/>
      <h2 class="ml-2 text-lg font-bold text-gray-900" style="margin-left: 8px;">Tu carrito</h2>
    </div>
    <button id="cart-close" aria-label="Cerrar carrito">✕</button>
  </div>

  <!-- Mensaje vacío -->
  <p id="cart-empty" class="cart-empty">
    Agrega productos a tu carrito para empezar.
  </p>

  <!-- Lista de productos (se renderiza dinámicamente) -->
  <div id="cart-items" class="cart-items"></div>

  <!-- Footer con total y acciones -->
  <div class="drawer-footer">
    <div class="cart-total-row">
      <span>Total</span>
      <span id="cart-total">$0.00</span>
    </div>
    <button id="cart-clear" class="btn-secondary">Vaciar carrito</button>
    <a id="whatsapp-btn" href="" target="_blank" rel="noopener noreferrer" class="btn-whatsapp">
      <!-- Icono de WhatsApp -->
      <WhatsAppIcon width="20" height="20" />
      Pedir por WhatsApp
    </a>
  </div>
</aside>

<script is:inline>
  // ── Número de WhatsApp — cambiá por el tuyo ──────────────────
  // Formato internacional sin + ni espacios. México: 521 + 10 dígitos
  var WA_PHONE = "5212223018506";
  var CART_KEY  = "astro_cart";

  function waGetCart() {
    var raw = localStorage.getItem(CART_KEY);
    if (!raw) return [];
    try { return JSON.parse(raw); } catch(e) { return []; }
  }

  function waBuildMessage(cart) {
    var lines = cart.map(function(item) {
      return "• " + item.name + " x" + item.qty + " — $" + (item.price * item.qty).toFixed(2);
    });
    var total = cart.reduce(function(s, i) { return s + i.price * i.qty; }, 0);
    return "¡Hola! Me gustaría hacer el siguiente pedido:\n\n"
      + lines.join("\n")
      + "\n\n*Total: $" + total.toFixed(2) + "*";
  }

  function waUpdateLink() {
    var btn = document.getElementById("whatsapp-btn");
    if (!btn) return;
    var cart = waGetCart();
    if (cart.length === 0) {
      btn.style.opacity = "0.5";
      btn.style.pointerEvents = "none";
      btn.setAttribute("href", "#");
    } else {
      btn.style.opacity = "";
      btn.style.pointerEvents = "";
      var encoded = encodeURIComponent(waBuildMessage(cart));
      btn.setAttribute("href", "https://wa.me/" + WA_PHONE + "?text=" + encoded);
    }
  }

  window.addEventListener("cart:updated", waUpdateLink);
  window.addEventListener("storage", waUpdateLink);
  waUpdateLink();
</script>

<style>
  /* ── Drawer ── */
  #cart-drawer {
    position: fixed;
    top: 0;
    right: 0;
    width: min(400px, 95vw);
    height: 100dvh;
    background: #fff;
    box-shadow: -4px 0 24px rgba(0, 0, 0, 0.12);
    display: flex;
    flex-direction: column;
    transform: translateX(100%);
    transition: transform 0.3s ease;
    z-index: 1000;
    overflow: hidden;
  }

  #cart-drawer.open {
    transform: translateX(0);
  }

  /* Overlay */
  #cart-overlay {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
    z-index: 999;
  }

  #cart-overlay.open {
    display: block;
  }

  /* ── Header ── */
  .drawer-header {
    height: 65px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.25rem 1.5rem;
  }

  .drawer-header h2 {
    font-size: 1.1rem;
    font-weight: 700;
    margin: 0;
  }

  #cart-close {
    background: none;
    border: none;
    cursor: pointer;
    font-size: 1.1rem;
    padding: 0.25rem 0.5rem;
  }

  /* ── Items ── */
  .cart-items {
    flex: 1;
    overflow-y: auto;
    padding: 1rem 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .cart-empty {
    text-align: center;
    color: #a0aec0;
    padding: 2rem;
    margin: 0;
  }

  /* Estilos de cada item (renderizado por JS) */
  :global(.cart-item) {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  :global(.cart-item-img) {
    width: 56px;
    height: 56px;
    object-fit: cover;
    border-radius: 8px;
    flex-shrink: 0;
  }

  :global(.cart-item-info) {
    flex: 1;
    min-width: 0;
  }

  :global(.cart-item-name) {
    font-size: 0.9rem;
    font-weight: 600;
    margin: 0 0 0.2rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  :global(.cart-item-price) {
    font-size: 0.85rem;
    color: #4a5568;
    margin: 0;
  }

  :global(.cart-item-controls) {
    display: flex;
    align-items: center;
    gap: 0.3rem;
  }

  :global(.qty-btn) {
    background: #edf2f7;
    border: none;
    width: 26px;
    height: 26px;
    border-radius: 6px;
    cursor: pointer;
    font-size: 1rem;
    line-height: 1;
  }

  :global(.qty-value) {
    font-size: 0.9rem;
    font-weight: 600;
    min-width: 20px;
    text-align: center;
  }

  :global(.remove-btn) {
    background: none;
    border: none;
    cursor: pointer;
    color: #e53e3e;
    margin-left: 0.25rem;
    font-size: 0.75rem;
  }

  /* ── Footer ── */
  .drawer-footer {
    padding: 1rem 1.5rem;
    border-top: 1px solid #e2e8f0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .cart-total-row {
    display: flex;
    justify-content: space-between;
    font-weight: 700;
    font-size: 1rem;
  }

  .btn-whatsapp {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background: #25d366;
    color: #fff;
    text-decoration: none;
    border: none;
    padding: 0.75rem;
    border-radius: 10px;
    cursor: pointer;
    font-size: 0.95rem;
    font-weight: 700;
    width: 100%;
    transition: background 0.2s, transform 0.15s, box-shadow 0.2s;
    box-shadow: 0 4px 14px rgba(37, 211, 102, 0.35);
  }

  .btn-whatsapp:hover {
    background: #1ebe5d;
    transform: translateY(-1px);
    box-shadow: 0 6px 20px rgba(37, 211, 102, 0.45);
  }

  .btn-whatsapp:active {
    transform: translateY(0);
  }

  .btn-secondary {
    background: none;
    border: 1px solid #e2e8f0;
    padding: 0.6rem;
    border-radius: 8px;
    cursor: pointer;
    font-size: 0.85rem;
    width: 100%;
    color: #718096;
  }

  #overlay {
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.35s ease;
  }
  #overlay.open {
    opacity: 1;
    pointer-events: all;
  }

</style>
