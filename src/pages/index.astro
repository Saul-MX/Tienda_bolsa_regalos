<style>
  .hero-bg {
    background-image: 
      linear-gradient(to right, rgba(20,12,5,0.80) 40%, rgba(20,12,5,0.35) 100%),
      url('../assets/img/Gemini_Generated_Image_n24m6vn24m6vn24m.png');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding: 140px 0;
  }

  .hero, .section{
    margin: 0 auto;
    padding: 0 20px;
  }

  .hero-mensaje{
    width: fit-content;
    padding: 5px 12px;
  }

  .btn-gold {
    display: flex;
    align-items: center;
    padding: 10px 25px;
    position: relative;
    font-size: 14px;
    background-color: #ffffffe8;
    border-radius: 3rem;
    border: none;
    outline: none;
    box-shadow: 5px 5px 10px #9b6a0080, inset 10px 6px 15px #9b5d0080, inset -5px -5px 8px #9b650040, 0 0 8px #9b6a0020;
    cursor: pointer;
    transition: box-shadow .3s ease-in-out, background-color .3s ease-in-out, color .3s ease-in-out;
  }

  .btn-gold::after{
    content: '';
    width: 20px;
    height: 10px;
    left: 10px;
    top: 10px;
    position: absolute;
    border-radius: 50%;
    background-color: #fff7;
    transform: rotate(160deg);
  }

  .btn-gold:hover {
    background-color: #fff;
    box-shadow: 5px 5px 15px #9b6a00c0, inset 10px 6px 20px #9b5d00c0, inset -5px -5px 10px #9b650080, 0 0 12px #9b6a0040;
  }

  .btn-hero-contact {
    align-items: center;
    padding: 10px 25px;
    border:1px solid #806c5f;
  }

  /*Section nosotros*/ 
  .section-chooseUs {
    padding: 80px 20px;
    margin: 0 auto;

    .paragraph-chooseUs{
      padding-bottom: 12px;
    }

    .card-dark {
      padding: 28px;
      background:rgba(255, 252, 244, 0.582);
      border:1px solid #ffb900;
    }
  }


  @media (max-width: 520px) {
    .cards-grid { grid-template-columns: 1fr; }
  }

  @media (max-width: 768px) {
    .hero { grid-template-columns: 1fr; padding: 2rem 1rem; min-height: auto; }
    .hero-visual { display: none; }
  }
</style>

<script is:inline>
  // M√©xico: 521 + 10 d√≠gitos
  var WA_PHONE = "5212223018506";

  function waUpdateLink() {
    var btn = document.getElementById("contacto-btn");
    if (!btn) return;
    var cart = waGetCart();
    if (cart.length === 0) {
      btn.style.opacity = "0.5";
      btn.style.pointerEvents = "none";
      btn.setAttribute("href", "#");
    } else {
      btn.style.opacity = "";
      btn.style.pointerEvents = "";
      btn.setAttribute("href", "https://wa.me/" + WA_PHONE + "?text=");
    }
  }

  waUpdateLink();
</script>
